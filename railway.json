{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "backend/Dockerfile"
  },
  "deploy": {
    "startCommand": "gunicorn --bind 0.0.0.0:$PORT --workers 2 --worker-class uvicorn.workers.UvicornWorker main:app",
    "healthcheckPath": "/ai/status",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE"
  }
}